    <!--Fin de nose-->

    <!-- Lo que contiene las plantas y el cuadro flotando de la derecha-->
    <div class="row py-4">
        <!-- Lo que contiene las plantas-->
        <% posts.forEach(post => { %>
        <div class="col-12">
             <div class="card mb-3 separar BlogPosts mx-4">
                 <div class="row">
                     <div class="col-3 text-center align-items-center" style="position: relative;top: 20px">
                         <img src="imagenes/icon4.png" class="img-fluid rounded-start FotoCartas" style="max-height: 350px;width: 90%">
                     </div>
                     <div class="col-md-9">
                         <div class="card-body">
                             <p class="card-title TituloCartas"><%= post.title %> <span style="color:#9ba686">by <%= post.author %></span></p>
                             <p class="card-text LastUp"><small ><%= post.createdAt.toLocaleDateString() %></small></p>
                             <p class="card-text "><%= post.description %></p>
                             <div>
                                 <a href="posts/<%= post.id %>" class="btn btn-primary moreInfoBttn">More info...</a>
                                 <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                                     <button type="submit" class="btn btn-danger dngrBttn">Delete</button>
                                 </form>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
        </div>
        <% }) %>

        <!-- Fin de lo que contiene las plantas-->

